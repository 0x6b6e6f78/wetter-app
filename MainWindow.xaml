<Window x:Class="WetterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WetterApp"
        mc:Ignorable="d"
        Title="WetterApp" Height="860" Width="550"
        ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0"/>
            <GradientStop Color="#6DBDD6" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Margin="20">
            <!-- Search Controls -->
            <Label x:Name="inputLabel" Foreground="White" FontSize="16">Stadt eingeben:</Label>
            <TextBox x:Name="MyTextBox" 
                    Height="25" 
                    Margin="0,0,0,10"
                    KeyDown="TextUpdated"/>

            <ComboBox x:Name="MyComboBox" 
                     Height="25" 
                     Margin="0,0,0,20"
                     SelectionChanged="MyComboBox_SelectionChanged" 
                     IsEnabled="False"/>

            <!-- Weather Display -->
            <Label x:Name="MyLabel" 
                    Visibility="Collapsed"
                    Foreground="White"/>

            <!-- Location and Date -->
            <TextBlock x:Name="LocationText" 
                      Text="London, UK" 
                      FontSize="32"
                      FontWeight="Bold"
                      Margin="0,0,0,5"
                      Foreground="White"/>
            <TextBlock x:Name="DateText"
                      Text="Monday 29 August" 
                      FontSize="20" 
                      Foreground="White"
                      Margin="0,0,0,20"/>

            <!-- Current Weather -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="WeatherIcon"
                        Width="100" 
                        Height="100"
                        Stretch="UniformToFill"
                        HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="CurrentTempText"
                             Text="21°C" 
                             FontSize="64"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Right"  />
                    <TextBlock x:Name="WeatherDescText"
                             Text="Mostly sunny" 
                             FontSize="24" 
                             Foreground="White"
                             Opacity="0.5"/>
                </StackPanel>
            </Grid>

            <Border BorderBrush="White" BorderThickness="0,1,0,0" Margin="0, 25, 0, 25"/>

            <!-- Weather Details -->
            <Grid  Margin="30,0,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="HighTempText"
                             Text="23°" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Hoch" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="WindText"
                             Text="7mph" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Wind" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBlock x:Name="SunriseText"
                             Text="05:27" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Sunrise" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>
            </Grid>

            <Grid Margin="30,10,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" >
                    <TextBlock x:Name="LowTempText"
                             Text="14°" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Tief" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="RainText"
                             Text="0%" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Regen" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBlock x:Name="SunsetText"
                             Text="20:57" 
                             FontSize="24"
                             Foreground="White"/>
                    <TextBlock Text="Sunset" 
                             Foreground="White"
                             FontSize="24"
                             Opacity="0.5"/>
                </StackPanel>
            </Grid>
            <Border BorderBrush="White" BorderThickness="0,1,0,0" Margin="0, 25, 0, 25"/>

                <!-- 5 Day Forecast -->
            <TextBlock Text="5-Tage-Vorhersage"
                      FontSize="20"
                      Margin="0,20,0,10"
                      Foreground="White"/>

            <ItemsControl x:Name="ForecastList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" 
                            Width="95" 
                            Height="140" 
                            Margin="1, 10, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="#33111111"/>
                            </Border.Background>
                            <StackPanel Margin="2,2">
                                <TextBlock Text="{Binding Date}"
                                    FontSize="20"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,10"/>

                                <Image Source="{Binding IconUrl}"
                                    Width="60"
                                    Height="60"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,10"/>

                                <TextBlock FontSize="16" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}°C">
                                            <Binding Path="MinTemp" />
                                            <Binding Path="MaxTemp" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
